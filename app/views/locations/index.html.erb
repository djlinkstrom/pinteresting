<div class="panel panel-primary panel-primary-wide">
    <div class="panel-heading"><h2>Your Locations</h2></div>
    <div class="panel-body">



        <% @locations.each_slice(3)  do |location_three| %>

        <div class="row row-space">          
          <% location_three.each do|location| %>
            <% if location.user == current_user %>            
                <div class="col-md-4">
                  <div class="panel-cell">
                    <%= image_tag location.image.url(:thumb) %> <br />
                    <h2><%= link_to location.placename, location %></h2> <br /> 
                    <%= location.address_1 %>, <%= location.town %>
                  </div>
                </div>              
            <% end %>
            <% if location == @locations.last %>
              <% if location_three.length != 3 %>
                <div class="col-md-4">
                  <div class="panel-cell-dashed">
                      <%= image_tag "new_calendar.png" %><br /> <br />
                      <%= link_to 'New Location', new_location_path, class:"btn btn-primary" %>
                  </div>
                </div> 
              <% else %>
                </div>
                <div class="row row-space">  
                  <div class="col-md-4">
                    <div class="panel-cell-dashed">
                      <%= image_tag "new_calendar.png", class:"panel-image" %><br /> <br />
                      <%= link_to 'New Location', new_location_path, class:"btn btn-primary" %>
                    </div>
                  </div> 
              <% end %> 
          <% end %>        
        <% end %> 
        </div>

    <% end %>
    </div>
</div>
<br>

