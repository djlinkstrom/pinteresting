<%= form_for(@event) do |f| %>
<div class="panel panel-primary panel-primary-wide">
	 <div class="panel-heading">
	 	<h2>Create Event</h2>
	 </div>
	 <div class="panel-body">
      <form class="form-horizontal" role="form">
        <div class="form-group row">
          <%= f.label "Event Name", class: "control-label col-sm-2 " %>
          <div class="col-sm-10">
            <%= f.text_field :eventname, class: "form-control" %>
          </div>
        </div>
        <div class="form-group row">
          <%= f.label "Event Description", class: "control-label col-sm-2 " %>
          <div class="col-sm-10">
            <%= f.text_area :eventdesc, class: "form-control" %>
          </div>
        </div>
        <div class="form-group row">
          <%= f.label "Event Start", class: "text-align-right col-sm-2 " %>
          <div class="col-sm-10">
            <%= f.datetime_select :eventstart, class: "form-control  form-control-padding" %>
          </div>
        </div>
        <div class="form-group row">
          <%= f.label "Event End", class: "text-align-right col-sm-2 " %>
          <div class="col-sm-10">
            <%= f.datetime_select :eventend, class: "form-control  form-control-padding" %>
          </div>
        </div>
        <div class="form-group row actions">
          <div class="col-sm-2"></div>
          <div class="col-sm-10">
            <%= f.submit class: "btn btn-primary btn-primary-margin" %>
          </div>
        </div> 
      </form>
    </div>
<% end %>
</div>

<script type="text/javascript">
  $(function () {
      $('#datetimepicker1').datetimepicker({
        minuteStepping:15
      });
  });
</script>
 