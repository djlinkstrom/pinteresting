<%= form_for @location, :html => { :multipart => true }  do |f| %>

  <% if @location.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@location.errors.count, "error") %> prohibited this location from being saved:</h2>

      <ul>
      <% @location.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="panel-body">
      <form class="form-horizontal" role="form">
        <div class="form-group row">
          <%= f.label :category, class: "control-label col-sm-2 " %>
          <div class="col-sm-10">
            <%= f.text_field :category, class: "form-control" %>
          </div>
        </div>
        <div class="form-group row">
          <%= f.label "Location Name", class: "col-sm-2 control-label" %>
          <div class="col-sm-10">
            <%= f.text_field :placename, class: "form-control" %>
          </div>
        </div>
        <div class="form-group row">
          <%= f.label :address_1, class: "col-sm-2 control-label" %>
          <div class="col-sm-10">
            <%= f.text_field :address_1, class: "form-control" %>
          </div>
        </div>
        <div class="form-group row">
           <%= f.label :address_2, class: "col-sm-2 control-label" %>
          <div class="col-sm-10">
            <%= f.text_field :address_2, class: "form-control" %>
          </div>
        </div>
        <div class="form-group row">
           <%= f.label :town, class: "col-sm-2 control-label" %>
          <div class="col-sm-10">
            <%= f.text_field :town, class: "form-control" %>
          </div>
        </div>
        <div class="form-group row">
           <%= f.label :postcode, class: "col-sm-2 control-label" %>
          <div class="col-sm-10">
            <%= f.text_field :postcode, class: "form-control" %>
          </div>
        </div>
        <div class="form-group row">
           <%= f.label :image, class: "col-sm-2 control-label" %>
          <div class="col-sm-10">
            <%= f.file_field :image, class: "form-control" %>
            <p class="assistance">This will be used as your default event photo if one does not exist. 300x300 jpeg or png recommended.</p> 
          </div>
        </div>
        <div class="form-group row actions">
          <div class="col-sm-2"></div>
          <div class="col-sm-10">
            <%= f.submit class: "btn btn-primary btn-primary-margin" %>
          </div>
        </div> 
       </form>
      
     
    </div>
<% end %>
</div>
