<%= form_for(@event) do |f| %>
  <% if @event.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@event.errors.count, "error") %> prohibited this event from being saved:</h2>

      <ul>
      <% @event.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>


  <div class="panel-body">
      <form class="form-horizontal" role="form">
        <div class="form-group row">
          <%= f.label "Event Name", class: "control-label col-sm-2 " %>
          <div class="col-sm-10">
            <%= f.text_field :eventname, class: "form-control" %>
          </div>
        </div>
        <div class="form-group row">
          <%= f.label "Event Description", class: "control-label col-sm-2 " %>
          <div class="col-sm-10">
            <%= f.text_area :eventdesc, class: "form-control" %>
          </div>
        </div>
        <div class="form-group row">
          <%= f.label "Event Start", class: "text-align-right col-sm-2 " %>
          <div class="col-sm-10">
            <%= f.datetime_select :eventstart, class: "form-control  form-control-padding" %>
          </div>
        </div>
        <div class="form-group row">
          <%= f.label "Event End", class: "control-label col-sm-2 " %>
          <div class="col-sm-10">
            <div class='input-group date' id='datetimepicker1'>
              <input type='text' class="form-control" data-date-format="MM/DD/YYYY HH:MM PP" />
              <span class="input-group-addon"><span class="glyphicon glyphicon-calendar"></span>
              </span>
            </div>
          </div>
        </div>
        <div class="form-group row actions">
          <div class="col-sm-2"></div>
          <div class="col-sm-10">
            <%= f.submit class: "btn btn-primary btn-primary-margin" %>
          </div>
        </div> 
      </form>
    </div>
<% end %>
</div>

<script type="text/javascript">
            $(function () {
                $('#datetimepicker1').datetimepicker();
            });
        </script>
 
